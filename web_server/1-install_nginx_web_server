#!/usr/bin/env bash
# This script installs Nginx and configures the default web page to display "Holberton School"

# Exit on any error
set -e

# Update package list
apt update

# Install nginx if not already installed
apt install -y nginx

# Replace default index.html content
echo "Holberton School" > /var/www/html/index.html

# Start nginx using service or init script (no systemctl)
if command -v service >/dev/null; then
    service nginx start
else
    /etc/init.d/nginx start
fi
