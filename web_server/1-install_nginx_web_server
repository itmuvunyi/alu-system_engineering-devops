#!/usr/bin/env bash
# Installs Nginx, configures it to listen on port 80, 
# and returns "Holberton School" at the root URL.

# Update package list
apt-get update -y

# Install Nginx if not already installed
apt-get install -y nginx

# Allow HTTP traffic through UFW (if UFW is active)
ufw allow 'Nginx HTTP' 2>/dev/null || true

# Set the content for the homepage
echo "Holberton School" > /var/www/html/index.html

# Restart Nginx without systemctl
service nginx restart
