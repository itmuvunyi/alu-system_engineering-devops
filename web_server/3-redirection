#!/usr/bin/env bash
# This script installs Nginx and sets up a redirect from /redirect_me

set -e  # Exit immediately if a command fails

sudo apt-get update
sudo apt-get install -y nginx

# Add redirect from /redirect_me to /
sudo sed -i '/server_name _;/a \\tlocation /redirect_me {\n\t\treturn 301 /;\n\t}' /etc/nginx/sites-available/default

# Set homepage content
echo "Holberton School for the win!" | sudo tee /var/www/html/index.html > /dev/null

# Restart Nginx to apply changes
sudo service nginx restart
